        <transferfunction name="id"/>
      </node>
      <node type="sensor" label="sensor 5">
        <position x="10.0" y="1.0" z="1.0"/>
        <transferfunction name="id"/>
      </node>

      <node type="actuator" label="actuator 1a">
        <position x="2.0" y="-1.0" z="-1.0"/>
