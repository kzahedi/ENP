<enp version="0.0.2">
  <simulator
    wd="/Users/zahedi/projects/mpi/experiments/evo.w3irdo"
    xml="xml/w3irdo_angular.xml"
    nr="2"/>
  <evaluation>
    <lifetime iterations="200"/>
    <cost     node="0.0" edge="0.0"/>
  </evaluation>
  <reproduction>
    <population size="100"/>
    <selection  pressure="0.15"/>
  </reproduction>
  <evolution>
    <node>
      <modify probability="1.0" maximum="2.0" delta="0.2"/>
      <add    probability="0.1" maximum="1.0"/>
      <delete probability="0.15"/>
    </node>
    <edge>
      <modify probability="0.1" maximum="4.0" delta="0.5"/>
      <add    probability="1.0" maximum="1.0"/>
      <delete probability="0.0"/>
